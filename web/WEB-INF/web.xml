<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>uploadPath</param-name>
        <param-value>E:/Documents/UploadedFiles/</param-value>
    </context-param>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>com.controller.UP_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signin</servlet-name>
        <servlet-class>com.controller.SI_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.controller.Reg_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ctrl</servlet-name>
        <servlet-class>com.controller.CTRL_Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FileServlet</servlet-name>
        <servlet-class>com.controller.FileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <jsp-file>/Register.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>profil</servlet-name>
        <jsp-file>/Profil.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>fileServlet</servlet-name>
        <servlet-class>com.controller.FileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>fileServlet</servlet-name>
        <url-pattern>/files/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ctrl</servlet-name>
        <url-pattern>/ctrl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profil</servlet-name>
        <url-pattern>/profil</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>-1</session-timeout>
        <cookie-config>
            <max-age>31536000</max-age>
        </cookie-config>
    </session-config>
    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <display-name>Administrateur</display-name>
        <web-resource-collection>
            <web-resource-name>Administrateur</web-resource-name>
            <description/>
            <url-pattern>/Register.jsp</url-pattern>
            <url-pattern>/Profil.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrateur</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Tous les utilisateurs</display-name>
        <web-resource-collection>
            <web-resource-name>Tous les utilisateurs</web-resource-name>
            <description/>
            <url-pattern>/Register.jsp</url-pattern>
            <url-pattern>/Uplodate.jsp</url-pattern>
            <url-pattern>/home.jsp</url-pattern>
            <url-pattern>/Profil.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Administrateur</role-name>
            <role-name>Utilisateur</role-name>
            <role-name>Sous administrateur</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Bloqué</display-name>
        <web-resource-collection>
            <web-resource-name>signin page</web-resource-name>
            <description>bloqué aprés connexion</description>
            <url-pattern>/Signin.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/Signin.jsp</form-login-page>
            <form-error-page>/Register.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Administrateur</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Sous administrateur</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Utilisateur</role-name>
    </security-role>
</web-app>
